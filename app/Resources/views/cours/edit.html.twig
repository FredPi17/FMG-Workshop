{% extends 'base.html.twig' %}

{% import "text.html.twig" as macro_collection_contenusText %}
{% import "sousTitre.html.twig" as macro_collection_contenusSousTitre %}
{% import "image.html.twig" as macro_collection_contenusImage %}

{% block body %}
    <h1>Cours edit</h1>

    {{ form_start(edit_form, {'attr':{class:'form-horizontal'}}) }}

    <div class="line form-group">
        {{ form_label(edit_form.title, null, {'label_attr': {class:'col-sm-2 control-label'}}) }}
        <div class="col-sm-4">
            {{ form_widget(edit_form.title, {attr: {class:'form-control', autocomplete:'off' }}) }}
        </div>
    </div>
    <br>

    <div class="line form-group">
        {{ form_label(edit_form.introduction, null, {'label_attr': {class:'col-sm-2 control-label'}}) }}
        <div class="col-sm-4">
            {{ form_widget(edit_form.introduction, {attr: {class:'form-control', autocomplete:'off' }}) }}
        </div>
    </div>
    <br>

    <div class="line form-group">
        {{ form_label(edit_form.imageFile, null, {'label_attr': {class:'col-sm-2 control-label'}}) }}
        <div class="col-sm-4">
            {{ form_widget(edit_form.imageFile, {attr: {class:'form-control', autocomplete:'off' }}) }}
        </div>
    </div>
    <br>

    <div class="line form-group">
        {{ form_label(edit_form.category, null, {'label_attr': {class:'col-sm-2 control-label'}}) }}
        <div class="col-sm-4">
            {{ form_widget(edit_form.category, {attr: {class:'form-control', autocomplete:'off' }}) }}
        </div>
    </div>
    <br>


    <div class="wrap-contenus">
        {{ macro_collection_contenusText.display_collectionText(edit_form.contenu) }}
        {{ macro_collection_contenusSousTitre.display_collectionSousTitre(edit_form.contenu) }}
        {{ macro_collection_contenusImage.display_collectionImage(edit_form.contenu) }}
    </div>

    <button type="button" class="add-sousTitre btn btn-primary btn-sm">Ajouter Sous-Titre</button>
    <button type="button" class="add-text btn btn-primary btn-sm">Ajouter Text</button>
    <button type="button" class="add-image btn btn-primary btn-sm">Ajouter Image</button>



        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('cours_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
