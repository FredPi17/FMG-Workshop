{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
        <div class="col-lg-8">
            <br>
            <h1 class="mt-4">Cours</h1>
            <p>{{ cours.introduction }}</p>
            {% for cont in cours.contenu %}
                <div id="{{ cont.id }}">
                    <h2>{{ cont.SousTitre }}</h2>
                    <p>{{ cont.info }}</p>
                    {% if cont.image != 0 %}
                        <img src="{{ asset('uploads/cours/' ~ cont.image) }}">
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        <div class="col-lg-4">
            <div class="card my-4">
                <br>
                <h5 class="card-header">Progression</h5>
                <div class="card-body">
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Chapitre</h5>
                <div class="card-body">
                    <ul class="list-group">
                        {% for cont in cours.contenu %}
                            {% if cont.SousTitre != null %}
                            <a href="#{{ cont.id }}">
                                <li class="list-group-item">{{ cont.SousTitre }}</li>
                            </a>
                        {% endif %}
                        {% endfor%}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
