{% block stylesheets %}
<link href="{{ asset('css/login.css') }}" rel="stylesheet">
    <link href="{{ asset('css/index.css') }}" rel="stylesheet">
    <style>
        .panel-body{
            padding-top: 10px;
            padding-bottom: 10px;
            height: auto;
            width: auto;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
    </style>

{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}

    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6 offset-3">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post" id="login-form">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="form-group">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required" autocomplete="username" />
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" id="password" name="_password" required="required" class="form-control" autocomplete="current-password" />
                        </div>
                        <div class="form-group">
                            <input type="checkbox" id="remember_me" name="_remember_me"  class="form-control"value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>
                        <div class="form-group text-center">
                            <input class="btn btn-secondary" type="submit" id="_submit" name="_submit" class="form-control" value="{{ 'security.login.submit'|trans }}" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
